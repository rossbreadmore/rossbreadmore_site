<h1 class="hero-title">Ross Bread More</h1>
<p>A digital sketchbook for things I'm making and doing and thinking</p>

<input type="text" id="search" placeholder="Search posts..." />

<ul id="post-list">
  {% for post in collections.posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      — {{ post.date | date("MMMM d, yyyy") }}
    </li>
  {% endfor %}
</ul>

<ul>
  {% for post in collections.posts %}
    <li>
      <a href="{{ post.url }}">{{ post.data.title }}</a>
      — {{ post.date | date("MMMM d, yyyy") }}
    </li>
  {% endfor %}
</ul>

<script>
  const searchInput = document.getElementById('search');
  const postList = document.getElementById('post-list').getElementsByTagName('li');

  searchInput.addEventListener('keyup', function () {
    const query = this.value.toLowerCase();
    for (let item of postList) {
      const text = item.textContent.toLowerCase();
      item.style.display = text.includes(query) ? 'list-item' : 'none';
    }
  });
</script>

